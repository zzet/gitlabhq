%table{width: "100%", cellspacing: '1px', cellpadding: '3px', style: "color: #444; width: 100%;font-size:0.8em"}
  %tr{style: 'background: #efefef;'}
    %th{colspan: 5}
      Commits in push (#{@commits.count})
  %tr{style: 'margin: 1px; background: #efefef;'}
    %th{ style: "width: 78px" }
      Sha
    %th{ style: "width: 220px" }
      Branches
    %th
      Message
    %th{ style: "width: 118px" }
      Date
      = "(#{@commits.first.committer[:time].strftime('%Z')})"
    %th
      Author
  = render partial: "emails/project/push/commit", collection: @commits

%h4 Diff
- unless @diffs.blank?
  = render "emails/project/push/diffs", diffs: @diffs
- else
  Diff is empty
