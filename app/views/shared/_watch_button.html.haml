.dropdown.pull-right
  %a.dropdown-toggle.btn.btn-small{href: '#', "data-toggle" => "dropdown-watch"}
    - if current_entity.watched_by? @current_user
      %i.icon-eye-open
      Unwatch
    - else
      %i.icon-eye-close
      Watch
  %ul.dropdown-menu
    %li
      %a.watch-button.has_bottom_tooltip{class: watched_class(@current_user, current_entity), role: 'button', 'data-original-title' => watched_title(@current_user, current_entity), 'data-entity-id' => current_entity.id, 'data-entity-type' => current_entity.class.model_name.underscore }
