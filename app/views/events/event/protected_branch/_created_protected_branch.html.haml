.event-title
  %span.author_name= link_to_event_author event
  %span.event_label{class: event.action}= event_action_name(event)
  - pb = event.source
  - project = pb.project
  - if pb
    %strong= link_to truncate(pb.name), project_commits_path(project.path_with_namespace, pb.name)
  - else
    %strong= gfm truncate(event.data["name"])
  on
  - if project
    %strong= link_to project.name_with_namespace, project_path(project.path_with_namespace)
