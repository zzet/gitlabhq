.event-title
  %span.author_name= link_to_event_author event
  %span.event_label{class: event.action}= event_action_name(event)
  - if event.source
    %strong= link_to truncate(event.source.title), project_issue_path(event.source, event.source.project.path_with_namespace)
  - else
    %strong= gfm truncate(event.data["title"])
  to
  - if event.source.assignee
    %strong= link_to truncate(event.source.assignee.name), user_path(event.source.assignee)
  - else
    %strong= gfm truncate(event.data["title"])
  in
  - if event.target
    = link_to event.source.project.name, project_issue_path(event.source, event.source.project.path_with_namespace)
  - else
    = "Deleted"
  project
