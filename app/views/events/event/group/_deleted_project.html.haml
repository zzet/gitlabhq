.event-title
  %span.author_name= link_to_event_author event
  %span.event_label{class: event.action}= event_action_name(event)
  %strong= gfm truncate(event.data["name"])
  from
  - if event.target
    = link_to event.target.name, group_path(event.target.path)
  - else
    -# TODO. Add target to event data
    = "Deleted"
  group
