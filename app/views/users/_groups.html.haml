.panel.panel-default
  .panel-heading.clearfix
    = search_field_tag :filter_group, nil, placeholder: 'Filter by name', class: 'dash-filter form-control'

  %ul.well-list.js-sidebar-list
    - groups.each do |group|
      %li.js-description-tooltip{"data-title" => "#{group.description}"}
        = link_to group_path(group), class: 'profile-groups-avatars', :title => group.name do
          = image_tag group_icon(group.path)
          %strong.well-title.filter-title= group.human_name
          %span.pull-right.light
            - if group.owner == @user
              %i.icon-wrench
