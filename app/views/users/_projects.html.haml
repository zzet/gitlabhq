.panel.panel-default
  .panel-heading
    Projects
    = search_field_tag :filter_group, nil, placeholder: 'Filter by name', class: 'js-sidebar-filter form-control'
  %ul.well-list.js-sidebar-list
    - projects.each do |project|
      %li.js-description-tooltip{"data-title" => "#{project.description}"}
        = link_to_project project
