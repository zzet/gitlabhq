.panel.panel-default
  .panel-heading.clearfix
    = search_field_tag :filter_team, nil, placeholder: 'Filter by name', class: 'dash-filter form-control'
    - if current_user.can_create_team?
      %span.pull-right
        = link_to new_team_path, class: "btn btn-new" do
          %i.icon-plus
          New team
  %ul.well-list.dash-list
    - teams.each do |team|
      %li.group-row.js-description-tooltip{"data-title" => "#{team.description}"}
        = link_to team_path(id: team.path), class: dom_class(team) do
          %span.group-name.filter-title
            = truncate(team.name, length: 35)
          %span.arrow
            %i.icon-angle-right
    - if teams.blank?
      %li
        .nothing-here-block You have no teams yet.
