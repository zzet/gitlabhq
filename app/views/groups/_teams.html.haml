.ui-box
  .title.clearfix
    = search_field_tag :filter_team, nil, placeholder: 'Filter by name', class: 'form-control js-sidebar-filter'
    - if can? current_user, :manage_group, @group
      %span.pull-right
        = link_to group_teams_path(@group), class: "btn btn-new" do
          %i.icon-plus
          Assign team
  %ul.well-list.js-sidebar-list
    - teams.each do |team|
      %li.group-row.js-description-tooltip{"data-title" => "#{team.description}"}
        = link_to team_path(id: team.path), class: dom_class(team) do
          %span.group-name.filter-title
            = truncate(team.name, length: 35)
          %span.arrow
            %i.icon-angle-right
    - if teams.blank?
      %li
        %h3.nothing_here_message You have no teams yet.
