- user         = event.author
- service      = JSON.load(event.data)
- project      = event.target

= raw "User #{ link_to user.name, user_url(user.username)} deleted '#{ service['title'] }' service from #{ link_to project.path_with_namespace, project_url(project.path_with_namespace)} project:"
%table
  %tr
    %td Name
    %td= service['title']
  %tr
    %td Type
    %td= service['type']
%br
