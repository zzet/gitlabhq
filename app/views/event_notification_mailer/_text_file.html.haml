- too_big = diff.diff.lines.count > 1000
- if too_big
  %a.supp_diff_link Diff suppressed. Click to show

%table{style: "font-family:\"Menlo\",\"Liberation Mono\",\"Consolas\",\"Courier New\",\"andale mono\",\"lucida console\",monospace;margin:0px;padding:0px", cellpadding:0, cellspacing: 0}
  - each_diff_line(diff, index) do |line, type, line_code, line_new, line_old|
    %tr
      - if type == "match"
        %td{style: "font-size:12px;color:#666;border:none;background:#eee;margin:0px;padding:0px 5px;border-right:1px solid #ccc;text-align:right;min-width:35px;max-width:35px;width:35px"}
          = "..."
        %td{style: "font-size:12px;color:#666;border:none;background:#eee;margin:0px;padding:0px 5px;border-right:1px solid #ccc;text-align:right;min-width:35px;max-width:35px;width:35px"}
          = "..."
        %td{style: "font-size:12px;border:none;margin:0px;padding:0px;min-height:18px;color:#ccc;background:#fafafa"} 
          = line
      - else
        %td{style: "font-size:12px;color:#666;border:none;background:#eee;margin:0px;padding:0px 5px;border-right:1px solid #ccc;text-align:right;min-width:35px;max-width:35px;width:35px"}
          = link_to raw(type == "new" ? "&nbsp;" : line_old), "##{line_code}", id: line_code
          - if @comments_allowed
            = render "notes/diff_note_link", line_code: line_code
        %td{style: "font-size:12px;color:#666;border:none;background:#eee;margin:0px;padding:0px 5px;border-right:1px solid #ccc;text-align:right;min-width:35px;max-width:35px;width:35px"}
          = link_to raw(type == "old" ? "&nbsp;" : line_new) , "##{line_code}", id: line_code
        - if type == "new"
          %td{style: "background:#CFD;font-size:12px;min-height:18px;margin:0px;padding:0px;border:none"}
            = raw diff_line_content(line)
        - elsif type == "old"
          %td{style: "background:#FDD;font-size:12px;border:none;margin:0px;padding:0px;min-height:18px"}
            = raw diff_line_content(line)
        - else
          %td{style: "line-height:18px;font-size:12px;min-height:18px;margin:0px;padding:0px;border:none"}
            = raw diff_line_content(line)

    - if @reply_allowed
      - comments = @line_notes.select { |n| n.line_code == line_code }.sort_by(&:created_at)
      - unless comments.empty?
        = render "notes/diff_notes_with_reply", notes: comments
