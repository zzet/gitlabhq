- case params[:type]
- when NilClass
  - if @search_results[:projects][:records].present?
    = render "project_results"
  - elsif @search_results[:repositories][:blobs][:results].any?
    = render "code_results"
  - else
    %h4 No matches found

- when "project"
  = render "project_results"

- when "group"
  = render "group_results"

- when "team"
  = render "team_results"

- when "user"
  = render "user_results"

- when "merge_request"
  = render "merge_request_results"

- when "issue"
  = render "issue_results"

- when "code"
  = render "code_results"

- when "commits"
  = render "commits_results"

- if params[:search].present?
  :javascript
    $(".search_results .term").highlight("#{escape_javascript(params[:search])}");
